(defwidget emacs []
  (box :space-evenly false
       :spacing 10
    (label :style "color: #ffb044; font-size: 1.2em;"
           :text {current-task.icon})
    (label :style "color: #ffb044; font-weight: bold;"
        :text {current-task.text})))

(defpoll current-task :interval "5s" "./modules/emacs/emacs.sh --current-task")
